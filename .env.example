# Database: local Docker PostgreSQL (see docker-compose.yml)
# Start PG: docker compose up -d
# Push schema: pnpm db:push
DATABASE_URL=postgresql://fineli:fineli@localhost:5432/fineli

# Auth (required in production)
SESSION_SECRET=generate-with-openssl-rand-hex-32

# Fineli API (optional)
# FINELI_API_BASE_URL=https://fineli.fi/fineli/api/v1
# FINELI_DEFAULT_LANG=fi

# App URL (optional; set in Render to your service URL for magic links)
# NEXT_PUBLIC_APP_URL=http://localhost:3000

# Magic-link–only (deployed): set both to true on Render to disable anonymous login
# REQUIRE_MAGIC_LINK=true
# NEXT_PUBLIC_REQUIRE_MAGIC_LINK=true

# Email for magic links (required when REQUIRE_MAGIC_LINK=true). Render free tier blocks SMTP;
# use an HTTP API like Resend (free: 3000 emails/month). Get key at https://resend.com
# RESEND_API_KEY=re_xxxxx
# RESEND_FROM=Ruokapäiväkirja <noreply@yourdomain.com>

# AI (optional): openai | anthropic
# AI_PROVIDER=openai
# OPENAI_API_KEY=
# ANTHROPIC_API_KEY=
