# Database: local Docker PostgreSQL
# Start: docker compose up -d
# Push schema: pnpm db:push
DATABASE_URL=postgresql://fineli:fineli@localhost:5432/fineli

# Auth
SESSION_SECRET=change-me-to-a-random-string
MAGIC_LINK_FROM_EMAIL=noreply@fineli-ai.local

# Fineli API
FINELI_API_BASE_URL=https://fineli.fi/fineli/api/v1
FINELI_DEFAULT_LANG=fi

# AI Provider: 'anthropic' | 'openai' | 'none' (default: none = regex-only mode)
AI_PROVIDER=none

# Anthropic (Claude) — used when AI_PROVIDER=anthropic
# ANTHROPIC_API_KEY=sk-ant-...
# ANTHROPIC_MODEL=claude-sonnet-4-20250514

# OpenAI — used when AI_PROVIDER=openai
# OPENAI_API_KEY=sk-...
# OPENAI_MODEL=gpt-4o-mini

# AI tuning
# AI_CONFIDENCE_THRESHOLD=0.5
# AI_USE_RESPONSES=true
# AI_ENABLE_SUGGESTIONS=true

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
